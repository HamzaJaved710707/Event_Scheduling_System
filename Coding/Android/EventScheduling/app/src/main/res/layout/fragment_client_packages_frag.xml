<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".client.ui.client_packages_frag">

    <ImageView
        android:id="@+id/filter_packages_client_img"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="16dp"
        android:contentDescription="Filter icon"
        android:src="@mipmap/filter_icon_white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="Filter"
        android:textSize="16sp"
        android:textStyle="bold"
        android:id="@+id/filter_txt_client_package_frg"
        app:layout_constraintBottom_toBottomOf="@id/filter_packages_client_img"
        app:layout_constraintLeft_toRightOf="@id/filter_packages_client_img"
        app:layout_constraintTop_toTopOf="@id/filter_packages_client_img" />

    <RelativeLayout
        android:id="@+id/relLayout_pckage_client"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/filter_packages_client_img">

        <Button
            android:id="@+id/btn_filter_package_client"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="16dp"
            android:background="@color/secondarycolor"
            android:backgroundTint="@color/secondarycolor"
            android:text="Done"
            android:textColor="@color/colorPrimary" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/editLayout_package_client"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_filter_package_client"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:hint="Type"
            android:textColorHint="@color/secondarycolor"
            app:endIconMode="dropdown_menu">

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edtLayout_package_client_type"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_filter_package_client"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:hint="Type"
            android:textColorHint="@color/secondarycolor"
            app:endIconMode="dropdown_menu">

            <AutoCompleteTextView
                android:id="@+id/ediText_type_package_client"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/location_inputLayout_package_client"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtLayout_package_client_type"
            android:hint="Location"
            android:textColorHint="@color/secondarycolor"
            app:endIconMode="dropdown_menu">

            <AutoCompleteTextView
                android:id="@+id/location_editExt_package"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </com.google.android.material.textfield.TextInputLayout>


    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/relLayout_pckage_client" />


</androidx.constraintlayout.widget.ConstraintLayout>