<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/packageName_edit_evnt_create_org"
        app:boxStrokeWidth="1dp"
        app:boxStrokeWidthFocused="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintTextColor="@color/secondarycolor"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:boxStrokeColor="@color/secondarycolor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:hint="Package Name"
        android:textColorHint="@color/secondarycolor">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/evnt_package_Name_org_inputField"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        app:strokeColor="@color/secondarycolor"
        app:strokeWidth="1dp"
        android:id="@+id/service_btn_package_evnt_create_org"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/packageName_edit_evnt_create_org"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
        android:textColorHint="@color/secondarycolor"
        android:text="Add Services"
        android:elevation="4dp"
        android:padding="16dp"
        />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/food_btn_package_evnt_create_org"
        app:strokeWidth="1dp"
        app:strokeColor="@color/secondarycolor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/service_btn_package_evnt_create_org"
        android:text="Add Food Items"
        android:elevation="4dp"
        android:padding="16dp"
        android:textColorHint="@color/secondarycolor"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/price_layout_evnt_create_org"
        app:boxStrokeWidth="1dp"
        app:boxStrokeWidthFocused="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintTextColor="@color/secondarycolor"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:boxStrokeColor="@color/secondarycolor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/food_btn_package_evnt_create_org"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:hint="Price"
        android:textColorHint="@color/secondarycolor">

        <com.google.android.material.textfield.TextInputEditText
            android:textColor="@color/secondarycolor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:id="@+id/price_org_package_create"
            />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/evnt_package_creat_btn_org"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_photos_create_package_btn"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/secondarycolor"
        android:text="Create"
        android:textColor= "@android:color/black"
        android:elevation="4dp"/>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/add_photos_create_package_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/price_layout_evnt_create_org"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/secondarycolor"
        android:text="Add Photos"
        android:textColor= "@android:color/black"
        android:elevation="4dp"/>

