<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="18dp"
    android:layout_margin="5dp"
    >

    <RelativeLayout
        android:id="@+id/recycler_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/splashBackgroundColor"
        android:padding="4dp">

        <ImageView
            android:id="@+id/image_id"
            android:layout_width="385dp"
            android:layout_height="236dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="14dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="4dp"
            android:src="@mipmap/food_1" />

        <TextView
            android:id="@+id/pakage_name_text"
            android:layout_width="178dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_id"
            android:layout_alignStart="@+id/image_id"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="13dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="212dp"
            android:text="Special Package"
            android:textColor="@color/secondarycolor"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/location_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pakage_name_text"
            android:layout_alignStart="@+id/textView8"
            android:layout_marginStart="-4dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="-20dp"
            android:layout_toStartOf="@+id/location_text"
            android:src="@drawable/ic_location" />

        <TextView
            android:id="@+id/location_text"
            android:layout_width="174dp"
            android:layout_height="53dp"
            android:layout_below="@+id/image_id"
            android:layout_alignStart="@+id/pakage_name_text"
            android:layout_marginStart="28dp"
            android:layout_marginTop="33dp"
            android:text="Bandhan Marriage Hall"
            android:textColor="@color/secondarycolor"
            android:textSize="18sp" />

        <RatingBar
            android:id="@+id/rating_bar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/price_text"
            android:layout_alignEnd="@+id/image_id"
            android:layout_marginStart="-126dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="-30dp"
            android:layout_toEndOf="@+id/textView8"
            android:numStars="5"
            android:rating="3" />

        <TextView
            android:id="@+id/price_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_id"
            android:layout_alignStart="@+id/image_id"
            android:layout_alignEnd="@+id/image_id"
            android:layout_marginStart="267dp"
            android:layout_marginTop="33dp"
            android:layout_marginEnd="0dp"
            android:text="Rs: 1200/per head"
            android:textColor="@color/secondarycolor"
            android:textSize="18sp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>

