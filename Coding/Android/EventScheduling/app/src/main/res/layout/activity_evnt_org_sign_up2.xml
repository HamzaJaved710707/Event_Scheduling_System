<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registration"
        android:id="@+id/reg_txt_signUp2_evntOrg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        android:textSize="20sp"
        android:textStyle="bold"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/reg_txt_signUp2_evntOrg"
        android:id="@+id/evnt_signUp_business_wrapper"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/BusinessName"
        android:textColorHint="@color/secondarycolor"
        app:boxStrokeColor="@color/secondarycolor"
        android:paddingStart="16dp"
        android:paddingEnd = "16dp"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/business_edtXt_signUp2"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/evnt_signUp_bussCat_wrapper"
        app:endIconMode="dropdown_menu"
        style = "@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:paddingStart="16dp"
        android:paddingEnd = "16dp"
        android:layout_marginTop="8dp"
        android:textColorHint="@color/secondarycolor"
        app:boxStrokeColor="@color/secondarycolor"
        app:layout_constraintTop_toBottomOf="@+id/evnt_signUp_business_wrapper"
        android:hint="@string/BusinessCategory">
        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/evnt_signUp2_busCat_txtView"/>


    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/evnt_signUp_bussCat_wrapper"
        android:id="@+id/evnt_signUp_province_wrapper"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/Province"
        android:textColorHint="@color/secondarycolor"
        app:boxStrokeColor="@color/secondarycolor"
        android:layout_marginTop="8dp"
        android:paddingStart="16dp"
        android:paddingEnd = "16dp"

        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/province_signUp2_edtXt"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/city_layout_evntSignUp2"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/City"
        android:textColorHint="@color/secondarycolor"
        app:boxStrokeColor="@color/secondarycolor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/evnt_signUp_province_wrapper"
        android:layout_marginTop="8dp"
        android:paddingStart="16dp"
        android:paddingEnd = "16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/city_signUp2_edtXt"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        app:layout_constraintTop_toBottomOf="@+id/city_layout_evntSignUp2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/SignUp"
        android:layout_marginTop="16dp"
        android:background="@drawable/buttonlayout"
        android:id="@+id/btn_evntOrg_signUp2"
        />

<ProgressBar
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/progBar_Evnt_SignUp2"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>

    ></ScrollView>