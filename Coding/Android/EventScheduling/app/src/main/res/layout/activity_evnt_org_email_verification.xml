<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".eventorg.ui.evntOrg_emailVerification"
    android:background="@color/colorPrimary">
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_height="wrap_content"
        android:id="@+id/evnt_password_reset"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.386"
        android:hint="Enter your email here"
        android:textColorHint="@color/secondarycolor"
        app:startIconDrawable="@drawable/ic_email_white"
        app:startIconTint="@color/secondarycolor"
        app:hintTextColor="@color/secondarycolor"
        app:boxStrokeColor="@color/secondarycolor"
        app:endIconMode="clear_text"
        app:endIconTint="@color/secondarycolor"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:textColor="@color/secondarycolor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/evnt_password_reset_editTxt"/>


    </com.google.android.material.textfield.TextInputLayout>
<com.google.android.material.button.MaterialButton
    android:layout_marginTop="8dp"
    app:cornerRadius="16dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintEnd_toEndOf="@+id/send_request_password"
    app:layout_constraintStart_toStartOf="@+id/send_request_password"
    app:layout_constraintTop_toBottomOf="@+id/send_request_password"
    android:id="@+id/btn_request_exit"
    android:backgroundTint="@color/secondarycolor"
    android:text="Exit"
    android:textColor="@color/colorPrimary"
    />

<com.google.android.material.button.MaterialButton
    app:cornerRadius="16dp"
    android:layout_marginTop="16dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/send_request_password"
    app:layout_constraintEnd_toEndOf="@+id/evnt_password_reset"
    app:layout_constraintStart_toStartOf="@+id/evnt_password_reset"
    app:layout_constraintTop_toBottomOf="@+id/evnt_password_reset"
    android:text="Send Request"
    android:textColor="@color/colorPrimary"
    android:backgroundTint="@color/secondarycolor"
    />


</androidx.constraintlayout.widget.ConstraintLayout>