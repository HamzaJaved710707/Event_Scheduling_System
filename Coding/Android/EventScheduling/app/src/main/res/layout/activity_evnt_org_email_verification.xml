<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".eventorg.ui.evntOrg_emailVerification"
    android:background="@color/colorPrimaryLight">


    <TextView
        android:id="@+id/emailVerification_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please Verify your email address first"
        android:textColor="@color/secondarycolor"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.386" />

    <Button
        android:id="@+id/btn_email_verify"
        android:layout_width="130dp"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/buttonlayout"
        android:elevation="4dp"
        android:text="Exit"
        android:textColor="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="@+id/send_email_veri_buttton"
        app:layout_constraintStart_toStartOf="@+id/send_email_veri_buttton"
        app:layout_constraintTop_toBottomOf="@+id/send_email_veri_buttton" />

    <Button
        android:id="@+id/send_email_veri_buttton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:background="@drawable/buttonlayout"
        android:text="Send Email verification"
        android:textColor="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="@+id/emailVerification_text"
        app:layout_constraintStart_toStartOf="@+id/emailVerification_text"
        app:layout_constraintTop_toBottomOf="@+id/emailVerification_text" />
</androidx.constraintlayout.widget.ConstraintLayout>