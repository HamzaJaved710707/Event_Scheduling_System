<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/profilePic_frame_evnt_create_catering"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profilePic_create_catering"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="bottom|center_horizontal"
            android:src="@drawable/ic_person_white" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_camera_create_catering"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom|end"
            android:src="@drawable/ic_baseline_camera_white"

            />
    </FrameLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/packageName_edit_evnt_create_catering"
        app:boxStrokeWidth="1dp"
        app:boxStrokeWidthFocused="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintTextColor="@color/secondarycolor"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:boxStrokeColor="@color/secondarycolor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profilePic_frame_evnt_create_catering"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:hint="Package Name"
        app:boxBackgroundColor="@color/colorPrimaryLight"
        android:textColorHint="@color/secondarycolor">

        <com.google.android.material.textfield.TextInputEditText
            android:textColor="@color/secondarycolor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/evnt_package_Name_caterer_inputField"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:backgroundTint="@color/colorPrimaryLight"
        app:strokeColor="@color/secondarycolor"
        app:strokeWidth="1dp"
        android:id="@+id/service_btn_package_evnt_create_caterer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/packageName_edit_evnt_create_catering"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
        android:textColorHint="@color/secondarycolor"
        android:text="Add Services"
        android:elevation="4dp"
        android:padding="16dp"
        />


    <com.google.android.material.button.MaterialButton
        android:backgroundTint="@color/colorPrimaryLight"

        android:id="@+id/food_btn_package_evnt_create_catering"
        app:strokeWidth="1dp"
        app:strokeColor="@color/secondarycolor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/service_btn_package_evnt_create_caterer"
        android:text="Add Food Items"
        android:elevation="4dp"
        android:padding="16dp"
        android:textColorHint="@color/secondarycolor"/>
    <com.google.android.material.button.MaterialButton
        android:backgroundTint="@color/colorPrimaryLight"

        android:id="@+id/venue_btn_package_evnt_create_catering"
        app:strokeWidth="1dp"
        app:strokeColor="@color/secondarycolor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/food_btn_package_evnt_create_catering"
        android:text="Add Venue "
        android:elevation="4dp"
        android:padding="16dp"
        android:textColorHint="@color/secondarycolor"/>

    <com.google.android.material.textfield.TextInputLayout

        android:id="@+id/price_layout_evnt_create_catering"
        app:boxStrokeWidth="1dp"
        app:boxStrokeWidthFocused="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintTextColor="@color/secondarycolor"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:boxStrokeColor="@color/secondarycolor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/venue_btn_package_evnt_create_catering"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:hint="Price"
app:boxBackgroundColor="@color/colorPrimaryLight"
        android:textColorHint="@color/secondarycolor">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/evntOrg_create_package_price"

            android:textColor="@color/secondarycolor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/evnt_package_creat_btn_caterer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/price_layout_evnt_create_catering"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/secondarycolor"
        android:text="Create"
        android:textColor= "@android:color/black"
        android:elevation="4dp"/>

<ProgressBar
    android:id="@+id/evnt_create_package_progressBar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf=" parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:visibility="invisible"/>


</androidx.constraintlayout.widget.ConstraintLayout>