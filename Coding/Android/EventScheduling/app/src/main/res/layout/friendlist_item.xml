<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardElevation="4dp"
    card_view:cardCornerRadius="10dp"
    android:layout_margin="3dp"
    android:id="@+id/friendlist_item_id"

    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id = "@+id/recycler_layout_friendList"
        android:background="@color/colorPrimaryLight"
        android:padding="2dp"

        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_id_friendList"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="4dp"
            android:src="@drawable/ic_person_white"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/recycler_text_friendList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/image_id_friendList"
            android:text="@string/Line"
            android:textColor="@android:color/white"
            android:textSize="12pt"
            android:textStyle="bold"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toEndOf="@id/image_id_friendList"
            card_view:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="16dp"/>

        <ImageView
            android:id="@+id/client_msgIcon_friendList"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_email_white"
            android:layout_marginEnd="16dp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/client_friendIcon_friendList"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/_person_add_white"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toStartOf="@+id/client_msgIcon_friendList"
            card_view:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="16dp"/>




    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>


